# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration files
[*.{toml,cfg,ini}]
indent_style = space
indent_size = 4

# HTML templates
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS and related
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JavaScript
[*.{js,ts}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

[docker-compose*.yml]
indent_style = space
indent_size = 2
